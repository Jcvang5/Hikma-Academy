<div class="student_list_cont">
<div class="aside">
  
    <div class="user-profile">
      <% if current_user.image.attached? %>
        <%= image_tag current_user.image, class: "user-profile-picture" %>
      <% else %>
        <%= image_tag 'default-profile.png', class: "user-profile-picture" %> <!-- Placeholder image -->
      <% end %>
      <h3 class="user-name"><%= current_user.first_name %></h3>
    </div>
    
    <div class="dashboard">
      <h4>Dashboard</h4>
    </div>
    
    <ul class="nav-list">
      <li class="nav-item"><%= link_to 'Courses', teacher_courses_path %></li>
      <li class="nav-item"><%= link_to 'Students', teacher_students_path %></li>
      <li class="nav-item"><a href="#">Assign</a></li>
    </ul>
  </div>

<div class="main-content">
<h1>Students</h1>
<% if @students.any? %>
  <table class="student-table">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>
    <% @students.each do |student| %>
      <tr>
        <td data-label="First Name"><%= student.first_name %></td>
        <td data-label="Last Name"><%= student.last_name %></td>
        <td data-label="Email"><%= student.email %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>You have no students.</p>
<% end %>
</div>
</div>