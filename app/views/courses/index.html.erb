      </div>
      <hr>
      <div class="name"><%= course.name %></div>
      <% unless course.description === '' %>
        <p class="p">Description: <%= course.description %></p>
      <% else %>
        <p class='p'>There is no description for this course</p>
      <% end %>
    </div>
  <% end %>
</div>