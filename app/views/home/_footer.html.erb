<footer class="site-footer">
  <div class="footer-content">
    <div class="footer-logo">
      <%= image_tag('logo/hikma_PrimaryHorizontal.png', alt: 'Hikma Academy logo') %>
    </div>
    <nav class="footer-nav">
      <ul class="footer-nav-list">
        <li><%= link_to 'About us', about_path, class: 'footer-nav-link' %></li>
        <li><%= link_to "Contact Us", contacts_index_path, class: "footer-nav-link" %></li>
        <li><%= link_to 'Courses', courses_path, class: 'footer-nav-link' %></li>
      </ul>
    </nav>
    <ul class="social-media">
      <li>
        <a href="https://www.instagram.com/hikmaacademymn/">
          <%= image_tag('instagram.png', alt: 'Instagram icon', class: 'instagram') %>
        </a>
      </li>
    </ul>
    <hr>
    <div class="footer-copyright">
      <p><%= TextContent.find_by(location: "footer_address")&.body %></p>
      <p class="phone-and-address"><%= TextContent.find_by(location: "footer_contact")&.body %></p>
      <p><%= TextContent.find_by(location: "footer_copyright")&.body %></p>
    </div>

  </div>
</footer>
